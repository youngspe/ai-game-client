{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
  },
  "include": [
    "src/**/*"
  ],
}
